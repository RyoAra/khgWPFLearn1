<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="{x:Type mahapps:MetroWindow}" TargetType="mahapps:MetroWindow">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="MinWidth" Value="300"/>
        <Setter Property="MinHeight" Value="500"/>
    </Style>
    <Style x:Key="MinimumWindow" TargetType="Window">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="MinWidth" Value="300"/>
        <Setter Property="MinHeight" Value="300"/>
    </Style>
    <Style x:Key="MaximumWindow" TargetType="Window">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="MinWidth" Value="300"/>
        <Setter Property="MinHeight" Value="700"/>
    </Style>
    <Style x:Key="{x:Type UserControl}" TargetType="UserControl">
        <Setter Property="Background" Value="Gray"/>
    </Style>
</ResourceDictionary>